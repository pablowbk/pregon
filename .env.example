# PREGÓN - Delegación Costa Norte
# Configuración de Variables de Entorno
# ===========================================

# Supabase (obtener de https://supabase.com/dashboard)
NEXT_PUBLIC_SUPABASE_URL=tu_supabase_url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=tu_supabase_publishable_default_key
SUPABASE_SECRET_KEY=tu_supabase_secret_key


# Contraseña de Admin (cambiar por una contraseña segura)
ADMIN_PASSWORD=tu_contraseña_segura_aqui

# WhatsApp Cloud API (obtener de https://developers.facebook.com)
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id
WHATSAPP_ACCESS_TOKEN=tu_access_token
WHATSAPP_VERIFY_TOKEN=tu_verify_token_personalizado
WHATSAPP_BUSINESS_ACCOUNT_ID=tu_business_account_id

# URL base de la aplicación (para QR codes y webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cron secret (generar un string aleatorio para proteger los endpoints de cron)
CRON_SECRET=tu_cron_secret_aleatorio
